<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/selectTerminalText"
        android:layout_width="wrap_content"
        style="@style/SubTitleTextStyle"
        android:layout_height="wrap_content"
        android:text="Select Terminal"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/terminalSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/selectTerminalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/confirmTerminalButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@id/terminalSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>